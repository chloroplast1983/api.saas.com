<?xml version="1.0" encoding="utf-8"?>
<!--
    phpunit -c phpunit.xml
-->
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         syntaxCheck="true"
         forceCoversAnnotation="false"
         bootstrap="./tests/bootstrap.php">

     <php>
        <var name="DB_DSN" value="mysql:dbname=saas_test;host=dbw" />
        <var name="DB_USER" value="root" />
        <var name="DB_PASSWD" value="123456" />
        <var name="DB_DBNAME" value="saas_test" />
    </php>

    <testsuites>
        <testsuite name="Application">
            <directory>./tests/UnitTest/Application/Application</directory>
        </testsuite>
        <testsuite name="Common">
            <directory>./tests/UnitTest/Application/Common</directory>
        </testsuite>
        <testsuite name="Product">
            <directory>./tests/UnitTest/Application/Product</directory>
        </testsuite>
        <testsuite name="Trade">
            <directory>./tests/UnitTest/Application/Trade</directory>
        </testsuite>
        <testsuite name="User">
            <directory>./tests/UnitTest/Application/User</directory>
        </testsuite>
        <testsuite name="Web">
            <directory>./tests/UnitTest/Application/Web</directory>
        </testsuite>
        <testsuite name="Saas">
            <directory>./tests/UnitTest/Application/Saas</directory>
        </testsuite>
        <testsuite name="System">
            <directory>./tests/UnitTest/System/</directory>
            <file>./tests/UnitTest/CoreTest.php</file>
        </testsuite>
        <testsuite name="Integration">
            <directory>./tests/IntegrationTest/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./System/</directory>
        </whitelist>
    </filter>

</phpunit>